<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Joseph Albahari</Authors>
    <Company>LINQPad</Company>
    <Description>Fluent API for .NET reflection, using a dynamic proxy</Description>
    <Copyright>Joseph Albahari</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/albahari/uncapsulator</PackageProjectUrl>
    <RepositoryUrl>https://github.com/albahari/uncapsulator</RepositoryUrl>
    <PackageTags>dynamic reflection fluent</PackageTags>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <Version>1.0.0-beta.3</Version>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>Encapsulator.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>C:\source\Uncapsulator\src\bin\Uncapsulator.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
  </ItemGroup>

</Project>
